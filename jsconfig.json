{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ],
  "paths": {
    "scenes": [
      "./components/scenes"
    ],
    "generics": [
      "./components/generics"
    ]
  }
}
