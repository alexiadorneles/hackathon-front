{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "alwaysStrict": true,
    "sourceMap": false,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist"
  ],
  "paths": {
    "generics": [
      "generics"
    ],
    "assets": [
      "assets"
    ],
    "img": [
      "img"
    ],
    "services": [
      "services"
    ],
    "objects": [
      "objects"
    ],
    "utils": [
      "utils"
    ],
    "constants": [
      "constants"
    ],
    "scenes": [
      "scenes"
    ]
  }
}
